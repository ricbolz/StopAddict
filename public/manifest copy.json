{
  "name": "StopAddict",
  "start_url": ".",
  "manifest_version": 3,
  "version" : "0.0.0.1",
  "description": "Block site by the URL and Word",
  "author" : "Hendrico Vernando Bolang",
  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "activeTab",
    "http://*/*",
    "https://*/*",
    "<all_urls>",
    "scripting",
    "history"
  ],
  "action" : {
    "default_popup" : "index.html",
    "default_title" : "StopAddict"
  },
  "default_icon": {
    "16" : "logo192.png",
    "32" : "logo192.png",
    "48" : "logo192.png",
    "128": "logo192.png"
  },
  "icons" : {
    "16" : "logo192.png",
    "32" : "logo192.png",
    "48" : "logo192.png",
    "128": "logo192.png"
  },
  "background": {
    "service_worker":"background.js"
  },
  "host_permissions" : [
    "*://example.com/*",
    "*://*/",
    "chrome-extension://*/*/*"
  ],
  "web_accessible_resources": [{
    "resources": ["blocked.js"],
    "matches" : ["<all_urls>"]
  }]

}
